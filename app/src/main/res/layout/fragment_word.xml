<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.WordFragment"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/buttonGo"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:layout_margin="10dp"
        android:backgroundTint="#00BCD4"
        android:text="Git"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textviewList"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Kelimeye git"
        android:textSize="25sp"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textviewWord"
        android:layout_width="396dp"
        android:layout_height="380dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Burda bir word olacak"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGo" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_gravity="bottom"
        android:layout_margin="1dp"
        android:backgroundTint="#00BCD4"
        android:text="geri"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewWord" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="171dp"
        android:layout_height="51dp"
        android:layout_gravity="bottom"
        android:layout_margin="1dp"
        android:backgroundTint="#00BCD4"
        android:text="ileri"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewWord" />

    <Button
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#00BCD4"
        android:foregroundGravity="left"
        android:gravity="center"
        android:text="sil"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/basaDon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:backgroundTint="#00BCD4"
        android:foregroundGravity="left"
        android:gravity="center"
        android:text="başa dön"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textviewWord" />

    <Button
        android:id="@+id/listeyeGit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:foregroundGravity="left"
        android:gravity="center"
        android:text="Lİsteye git"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basaDon" />
    <Button
        android:id="@+id/buttonForAddGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:backgroundTint="#00BCD4"
        android:foregroundGravity="right"
        android:gravity="center"
        android:text="ekle"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>