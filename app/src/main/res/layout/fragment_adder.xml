<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AdderFragment"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextEnglishWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Word - English"
        android:textSize="25sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <EditText
        android:id="@+id/editTextTurkishWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kelime - Türkçe"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/buttonAddWord"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="#00BCD4"
        android:text="add word"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/textviewCase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text=" "
        android:layout_marginTop="25dp"
        />
</LinearLayout>